<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="/Content/bootstrap.min.css"/>
    <script type="text/javascript" src="/Scripts/angular.min.js"></script>
    <script type="text/javascript" src="/Scripts/App/app.js"></script>
    <script type="text/javascript" src="/Scripts/App/DashboardController.js"></script>
</head>
<body ng-app="ConversionApp">
    <div ng-controller="DashboardCtrl">
        <div class="container">

            <div ng-include src="'InputForm.html'"></div>
            <div ng-include src="CurrentView"></div>
        </div>
    </div>

    <!--Views-->
<script type="text/ng-template" id="InputForm.html">
        <div class="h3">
            Enter Amount And Your Name
        </div>

        <div class="row">
            <div class="col-md-6">
                <form class="form-horizontal" name="inputForm">
                    <div class="form-group">
                        Name: <input type="text" class="form-control" ng-model="$parent.Name" />
                    </div>
                    <div class="form-group">
                        Amount: <input type="text" name="amount" class="form-control" ng-model="$parent.Amount" ng-pattern="/^\d{0,9}(\.\d{1,9})?$/" />
                        <span ng-show="inputForm.amount.$error.pattern">Invalid amount</span>
                    </div>
                    <div class="form-group">
                        <input type="button" value="Convert" class="btn btn-default" ng-click="ConvertHandler()" ng-show="inputForm.$valid" />
                    </div>
                </form>
            </div>
            <div class="col-md-6"></div>
        </div>
    
</script>
    <script type="text/ng-template" id="Display.html">
        <div class="row">
            <div class="col-md-12">
                <p>Name: {{ResultName}}</p>
                <p>Amount in Text: {{ResultAmount}}</p>
            </div>
        </div>    
    </script>
    <script type="text/ng-template" id="Error.html">
        <div class="row">
            <div class="col-md-12">
                {{ErrorMessage}}
            </div>
        </div>
    </script>
    <script type="text/ng-template" id="Blank.html">
    </script>

</body>
</html>
